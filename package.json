{
  "name": "template_microservices",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo para plataforma con microservicios (NestJS, NextJS, Prisma, Kafka, Postgres)",
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:auth": "pnpm --filter ./apps/auth dev",
    "dev:gateway": "pnpm --filter ./api-gateway dev",
    "dev:web": "pnpm --filter ./web dev",
    "dev:all": "concurrently \"pnpm dev:auth\" \"pnpm dev:gateway\" \"pnpm dev:web\""
  },
  "keywords": [],
  "authors": [
    "seyma0512",
    "nelhoesp"
  ],
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@types/node": "^24.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "concurrently": "^8.0.0"
  }
}
