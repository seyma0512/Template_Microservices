{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/shared/*": ["../../packages/shared/src/*"]
    },
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
    "include": [
    "src/**/*",
    "../../packages/shared/src/**/*"
  ]
}
